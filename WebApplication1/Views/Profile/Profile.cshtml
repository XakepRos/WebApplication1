@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

@*@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}*@

<div>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a href="#first" aria-controls="first" role="tab" data-toggle="tab">Profile</a>
        </li>
        <li role="presentation">
            <a href="#second" aria-controls="second" role="tab" data-toggle="tab">Document</a>
        </li>
    </ul>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="first">
            @Html.Partial("~/Views/Customer/Index.cshtml", Model.FirstName)
        </div>
        <div role="tabpanel" class="tab-pane" id="second">
            @Html.Partial("~/Views/User/Index.cshtml", Model.LastName)
        </div>
    </div>
</div>

<form id="profileForm" asp-controller="Profile" asp-action="CreateProfile" method="post" role="form">
    <div class="form-row">
        <div class="col">
            <input type="text" asp-for="FirstName" placeholder="First name">
        </div>
       @* <div class="col">
            <input type="text" asp-for="MiddleName" placeholder="Middle name">
        </div>*@
        <div class="col">
            <input type="text" asp-for="LastName" class="form-control" placeholder="Last name">
        </div>
    </div>


    <div class="form-row">
        <div class="col">
            <input type="email" asp-for="Email" class="form-control" placeholder="name@example.com">
        </div>
        <div class="col">
            <input type="date" asp-for="DOB" class="form-control" placeholder="Date Of Birth">
        </div>
    </div>


    <div class="form-row">
      
        <div class="col">
            <label for="exampleFormControlInput1">Contact Number</label>
            <input type="number" asp-for="ContactNumber" class="form-control" id="contact" placeholder="Contact Number">
        </div>
    </div>

    <div class="form-row">
       @* <div class="col">
            <input type="image" asp-for="ProfileImage" class="form-control">
        </div>*@
        <div class="col">
            <input type="file" asp-for="ProfileImageUpload" class="form-control">
        </div>
    </div>

    <div class="form-row">
 
    </div>


    <div class="form-row">
        <div class="col">
            <textarea class="form-control" asp-for="Description" id="exampleFormControlTextarea1" rows="3" placeholder="Description"></textarea>
        </div>
        <div class="col">
            <textarea class="form-control" asp-for="Remarks" id="exampleFormControlTextarea1" rows="3" placeholder="Remarks"></textarea>
        </div>
        <div class="col">
            <input type="file" asp-for="DocumentUpload" class="form-control-file" id="exampleFormControlFile1">
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <label class="form-check-label" for="inlineRadio1">Gender</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender"  name="inlineRadioOptions" id="inlineRadio2" value="option2">
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gender"  name="inlineRadioOptions" id="inlineRadio2" value="option2">
                <label class="form-check-label" for="inlineRadio2">Others</label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save & Continue</button>
</form>

