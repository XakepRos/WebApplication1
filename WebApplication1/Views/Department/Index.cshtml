@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">List of Department</h1>

    <div class="col mb-3">
        <a asp-controller="Department" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Create Department</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Department Code</th>
                <th scope="col">Department Name</th>
                <th scope="col">Description</th>
                <th scope="col">Remarks</th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.DepartmentCode
                    </td>
                    <td width="20%">
                        @item.DepartmentName
                    </td>
                    <td width="25%">
                        @item.Description
                    </td>
                    <td width="20%">
                        @item.Remarks
                    </td>
                    
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>